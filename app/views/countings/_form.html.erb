<%= simple_form_for counting do |form| %>
  <% if counting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(counting.errors.count, "error") %> prohibited this counting from being saved:</h2>

      <ul>
      <% counting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.input :amount, as: :integer %>
    <%= form.input :basic_currency, collection: Counting::AVAILABLE_CURRENCIES %>
    <%= form.input :target_currency, collection: Counting::AVAILABLE_CURRENCIES %>
    <%= form.input :duration, as: :integer, label: 'Duration in weeks' %>
    <%= form.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
