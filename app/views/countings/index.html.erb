<p id="notice"><%= notice %></p>

<h1 class="text-center">Your exchange rates for a currency pair</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Basic currency</th>
      <th scope="col">Target currency</th>
      <th scope="col">Amount</th>
      <th scope="col">Duration (in weeks)</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
    <% @countings.each_with_index do |counting, index| %>
      <tr>
        <td scope="row"><%= index + 1%></td>
        <td><%= counting.basic_currency %></td>
        <td><%= counting.target_currency %></td>
        <td><%= counting.amount %></td>
        <td><%= counting.duration %></td>
        <td><%= link_to counting, class: "btn btn-info" do %><i class="fa fa-eye"></i><% end %></td>
        <td><%= link_to edit_counting_path(counting), class: "btn btn-warning" do %><i class="fa fa-pencil-square-o" aria-hidden="true"></i><% end %></td>
        <td><%= link_to counting, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash" aria-hidden="true"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Counting', new_counting_path, class: "btn btn-secondary" %>
